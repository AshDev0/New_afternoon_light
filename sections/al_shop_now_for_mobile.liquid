<section id="shop-now-for-mobile">
<div class="w-full bg-[#e2e4e2]">
    {% for block in section.blocks%}
    <div class="items flex justify-between items-center flex-col">
        <p>{{block.settings.desc}}</p>
        <img src="{{block.settings.image | img_url: 'master'}}">
        <h3>{{block.settings.heading}}</h3>
    </div>
{% endfor%}
</div>
</section>
{% schema %}
  {
    "name": "Shop now for mobile",
    "tag": "section",
    "class": "section",
    "settings": [
      
    ],
    "blocks":[
        {
            "name":"Shop Now",
            "type":"shopnow",
            "settings":[
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Title"
                },
                {
                    "type": "text",
                    "id": "desc",
                    "label": "Description"
                }
            ]
        
        }
    ],
    "presets": [
      {
        "name": "Shop now for mobile",
        "settings": {
        }
      }
    ]
  }
{% endschema %}