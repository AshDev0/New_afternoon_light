<section id="categories">
<div class="categories">
<h2>{{section.settings.heading}}</h2>
<ul class="cat-list">
    {% for block in section.blocks %}
<li>
    <a href="#">
        <div class="cat-image">
            <img src="{{block.settings.image | img_url: 'master'}}" alt=" " loading="lazy" />
        </div>
        <div class="cat-content">
            <h3>{{block.settings.cat-heading}}</h3>
            <div class="cat-lines">
                <p>{{block.settings.first-para}}</p>
                <p>{{block.settings.second-para}}</p>
                <p>{{block.settings.third-para}}</p>
            </div>
        </div>
        </a>
</li>
{% endfor %}
</ul>
</div>
</section>
{% schema %}
  {
    "name": "Categories Section",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Section Title"
        }
    ],
    "blocks": [
        {
            "name": "Categories",
            "type": "categories",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Category Image"
                },
                {
                    "type": "text",
                    "id": "cat-heading",
                    "label": "Category Heading"
                },
                {
                    "type": "text",
                    "id": "first-para",
                    "label": "Paragraph One"
                },
                {
                    "type": "text",
                    "id": "second-para",
                    "label": "Paragraph Two"
                },
                {
                    "type": "text",
                    "id": "third-para",
                    "label": "Paragraph Third"
                }

            ]
        
        }
    ],
    "presets": [
      {
        "name": "Categories Section",
        "settings": {
        }
      }
    ]
  }
{% endschema %}